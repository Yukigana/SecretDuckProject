{% extends '/Layouts/header_and_menu.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}
{%  block css %}
    <style>
        table {
            border-collapse: collapse;
        }
        td, th {
            border: 1px solid black; /* Définir la bordure des cellules */
            padding: 8px; /* Ajouter du padding pour espacer les cellules */
            text-align: left; /* Définir l'alignement du texte dans les cellules */
        }
    </style>
{% endblock %}

{% block main_title %} Liste des utilisateurs {% endblock %}
{% block corps %}

    <h2>Liste des utilisateurs</h2>

    <table>
        <tr><th>User</th></tr>
        <td> Login </td>
        <td> Mot de passe </td>
        <td> Nom </td>
        <td> Prenom </td>
        <td> Date de naissance </td>
        <td> Role </td>
        {% for user in users %}
            <tr>
                <td>{{ user.login }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.dateNaissance.format('d/m/Y') }}</td>
                <td>{{ user.roles[0] }}</td>
                <td><a href="{{ path('form_user_delete', {'id' : user.id}) }}"><button class="mon-button" > delete </button></a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block barre_laterale %}

    <p>truc<br />bidule</p>

{% endblock %}
